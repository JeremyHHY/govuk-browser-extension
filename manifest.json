{
  "manifest_version": 2,
  "name": "GOV.UK Toolkit",
  "description": "Switch between GOV.UK environments and content",
  "homepage_url": "https://github.com/alphagov/govuk-toolkit-chrome",
  "version": "0.3",
  "content_scripts": [
    {
      "matches": ["https://*.gov.uk/*"],
      "js": [
        "menu/lib/jquery.min.js",
        "menu/lib/mustache.min.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "tabs",
    "http://*.gov.uk/*",
    "https://*.gov.uk/*"
  ],
  "page_action": {
    "default_icon": "menu/govuk-chrome-button.png",
    "default_title": "GOV.UK",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
